CELERY_APP="{{ app.django.project_module }}"
CELERYD_NODES="worker"
CELERYD_OPTS="--time-limit=300 --concurrency=2"
CELERYD_CHDIR="{{ app.project.src_dir }}/"
CELERYD_LOG_LEVEL="INFO"
ENV_PYTHON="{{ app.project.src_dir }}/.venv/bin/python"
CELERY_BIN="{{ app.project.src_dir }}/.venv/bin/python -m celery"

# How to call manage.py
CELERYD_MULTI="multi"

CELERYD_PID_FILE="/var/run/celery/{{app.project.name}}-%n.pid"
CELERYD_LOG_FILE="/var/log/celery/{{app.project.name}}-%n%I.log"

CELERYBEAT_PID_FILE="/var/run/celery/{{app.project.name}}-beat.pid"
CELERYBEAT_LOG_FILE="/var/log/celery/{{app.project.name}}-beat.log"
